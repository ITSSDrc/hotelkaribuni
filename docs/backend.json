
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's primary email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": [
            "superadmin",
            "receptionist",
            "stock_manager",
            "guest"
          ],
          "description": "The role of the user within the application."
        }
      },
      "required": [
        "uid",
        "displayName",
        "email",
        "role"
      ]
    },
    "Room": {
      "title": "Room",
      "description": "Represents a hotel room.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the room."
        },
        "type": {
          "type": "string",
          "enum": [
            "Standard",
            "Deluxe",
            "Suite"
          ]
        },
        "price": {
          "type": "number",
          "description": "The price per night."
        },
        "description": {
          "type": "string",
          "description": "A short description of the room."
        },
        "imageUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "A list of URLs for the room's images."
        },
        "status": {
          "type": "string",
          "enum": [
            "Disponible",
            "Occupée",
            "En nettoyage"
          ]
        }
      },
      "required": [
        "name",
        "type",
        "price",
        "description",
        "imageUrls",
        "status"
      ]
    },
    "Salle": {
      "title": "Salle",
      "description": "Représente une salle de conférence ou d'événement.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Le nom de la salle."
        },
        "capacity": {
          "type": "number",
          "description": "La capacité maximale de la salle."
        },
        "price": {
          "type": "number",
          "description": "Le prix de location (par heure ou par jour)."
        },
        "description": {
          "type": "string",
          "description": "Une courte description de la salle et de ses équipements."
        },
        "imageUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Une liste d'URLs pour les images de la salle."
        },
        "status": {
          "type": "string",
          "enum": [
            "Disponible",
            "Réservée",
            "En maintenance"
          ]
        }
      },
      "required": [
        "name",
        "capacity",
        "price",
        "description",
        "imageUrls",
        "status"
      ]
    },
    "Piscine": {
      "title": "Piscine",
      "description": "Représente une piscine de l'hôtel.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Le nom de la piscine."
        },
        "type": {
          "type": "string",
          "enum": [
            "Intérieure",
            "Extérieure",
            "Pour enfants"
          ],
          "description": "Le type de piscine."
        },
        "description": {
          "type": "string",
          "description": "Une courte description de la piscine."
        },
        "imageUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Une liste d'URLs pour les images de la piscine."
        },
        "status": {
          "type": "string",
          "enum": [
            "Ouverte",
            "Fermée",
            "En maintenance"
          ]
        }
      },
      "required": [
        "name",
        "type",
        "description",
        "imageUrls",
        "status"
      ]
    },
    "RestauBar": {
      "title": "Restaurant & Bar",
      "description": "Représente un restaurant ou un bar de l'hôtel.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Le nom de l'établissement."
        },
        "type": {
          "type": "string",
          "enum": [
            "Restaurant",
            "Bar"
          ]
        },
        "description": {
          "type": "string",
          "description": "Une courte description de l'établissement."
        },
        "imageUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Une liste d'URLs pour les images de l'établissement."
        },
        "status": {
          "type": "string",
          "enum": [
            "Ouvert",
            "Fermé"
          ]
        }
      },
      "required": [
        "name",
        "type",
        "description",
        "imageUrls",
        "status"
      ]
    },
    "Reservation": {
      "title": "Reservation",
      "description": "Represents a guest's room reservation.",
      "type": "object",
      "properties": {
        "guestName": {
          "type": "string",
          "description": "The name of the primary guest."
        },
        "checkInDate": {
          "type": "string",
          "format": "date",
          "description": "The check-in date."
        },
        "checkOutDate": {
          "type": "string",
          "format": "date",
          "description": "The check-out date."
        },
        "numberOfGuests": {
          "type": "number",
          "description": "The number of guests staying."
        },
        "roomId": {
          "type": "string",
          "description": "The ID of the reserved room."
        },
        "roomName": {
          "type": "string",
          "description": "The name of the reserved room."
        },
        "totalPrice": {
          "type": "number",
          "description": "The total price for the stay."
        },
        "status": {
          "type": "string",
          "enum": [
            "Confirmée",
            "Annulée",
            "Terminée",
            "En cours"
          ],
          "description": "The status of the reservation."
        }
      },
      "required": [
        "guestName",
        "checkInDate",
        "checkOutDate",
        "numberOfGuests",
        "roomId",
        "roomName",
        "totalPrice",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "email"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public information for each user."
    },
    "/rooms/{roomId}": {
      "schema": {
        "$ref": "#/entities/Room"
      },
      "description": "Stores information about hotel rooms."
    },
    "/salles/{salleId}": {
      "schema": {
        "$ref": "#/entities/Salle"
      },
      "description": "Stores information about conference/event halls."
    },
    "/piscines/{piscineId}": {
      "schema": {
        "$ref": "#/entities/Piscine"
      },
      "description": "Stores information about hotel pools."
    },
    "/restau-bar/{restauBarId}": {
      "schema": {
        "$ref": "#/entities/RestauBar"
      },
      "description": "Stores information about hotel restaurants and bars."
    },
    "/reservations/{reservationId}": {
      "schema": {
        "$ref": "#/entities/Reservation"
      },
      "description": "Stores guest reservation details."
    }
  }
}

{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's primary email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": [
            "superadmin",
            "receptionist",
            "stock_manager",
            "guest"
          ],
          "description": "The role of the user within the application."
        }
      },
      "required": [
        "displayName",
        "email",
        "role"
      ]
    },
    "Room": {
      "title": "Room",
      "description": "Represents a hotel room.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the room."
        },
        "type": {
          "type": "string",
          "enum": [
            "Standard",
            "Deluxe",
            "Suite"
          ]
        },
        "price": {
          "type": "number",
          "description": "The price per night."
        },
        "description": {
          "type": "string",
          "description": "A short description of the room."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the room's image."
        },
        "status": {
          "type": "string",
          "enum": [
            "Disponible",
            "Occup√©e",
            "En nettoyage"
          ]
        }
      },
      "required": [
        "name",
        "type",
        "price",
        "description",
        "imageUrl",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "email"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public information for each user."
    },
    "/rooms/{roomId}": {
      "schema": {
        "$ref": "#/entities/Room"
      },
      "description": "Stores information about hotel rooms."
    }
  }
}

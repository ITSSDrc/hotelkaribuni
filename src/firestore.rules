
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the requesting user has a specific role.
    function hasRole(role) {
      // Access the user's document in the 'users' collection using their UID.
      // The `get()` function fetches a document.
      // `exists()` checks if the document was found.
      // `.data.role` accesses the 'role' field in the document.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Helper function to check for multiple roles.
    function hasAnyRole(roles) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in roles;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // ANY authenticated user can create their own user document upon sign-up.
      // A user can UPDATE their own document.
      // An authenticated user can READ their own profile.
      allow create, update, get: if request.auth != null && request.auth.uid == userId;

      // A superadmin can perform any operation on any user document.
      allow read, write: if hasRole('superadmin');
    }
    
    // Rules for the 'rooms' collection
    match /rooms/{roomId} {
      // Anyone can read room information for the showcase.
      allow list, get: if true;
      
      // Receptionists and superadmins can update rooms (for status changes) and read them.
      allow get, update: if hasAnyRole(['superadmin', 'receptionist']);
      
      // Only superadmins can create or delete rooms.
      allow create, delete: if hasRole('superadmin');
    }

    // Rules for the 'salles' collection
    match /salles/{salleId} {
      // Anyone can read room information for the showcase.
      allow get, list: if true;
      
      // Only superadmins can create, update, or delete salles.
      allow write: if hasRole('superadmin');
    }

    // Rules for the 'piscines' collection
    match /piscines/{piscineId} {
      // Anyone can read piscine information for the showcase.
      allow get, list: if true;

      // Only superadmins can create, update, or delete piscines.
      allow write: if hasRole('superadmin');
    }
    
    // Rules for the 'restau-bar' collection
    match /restau-bar/{restauBarId} {
      // Anyone can read restaurant/bar information for the showcase.
      allow get, list: true;

      // Only superadmins can create, update, or delete items.
      allow write: if hasRole('superadmin');
    }

    // Rules for the 'reservations' collection
    match /reservations/{reservationId} {
      // Allow read and write (create, update, delete) for receptionists and superadmins
      allow write: if hasAnyRole(['superadmin', 'receptionist']);
      allow read: if hasAnyRole(['superadmin', 'receptionist']);
    }


    // Fallback rule: By default, deny all reads and writes to any other collection
    // to ensure a secure-by-default posture.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

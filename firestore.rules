rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the requesting user has a specific role.
    function hasRole(role) {
      // Access the user's document in the 'users' collection using their UID.
      // The `get()` function fetches a document.
      // `exists()` checks if the document was found.
      // `.data.role` accesses the 'role' field in the document.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can READ their own document. This is necessary for role checking after login.
      allow read: if request.auth != null && request.auth.uid == userId;

      // A user can UPDATE their own document.
      allow update: if request.auth != null && request.auth.uid == userId;

      // ANY authenticated user can create their own user document upon sign-up.
      // The document ID must match their authentication UID.
      allow create: if request.auth != null && request.auth.uid == userId;

      // A user with the 'superadmin' role can perform any read (get, list) or write (create, update, delete)
      // operation on any document in the 'users' collection.
      allow read, write: if hasRole('superadmin');
    }

    // By default, no other collections are accessible. This is a secure default.
  }
}
